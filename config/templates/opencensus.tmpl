"telemetry/opencensus": {
    "sample_rate": 100,
    "reporting_period": 1,
    "enabled_layers": {
        "backend": true,
        "router": true,
        "pipe": true
    },
    "exporters": {
        "prometheus": {
            "port": {{ .ports.api_gateway_metrics_port }},
            "namespace": "vdp"
        },
        "jaeger": {
          "endpoint": "http://{{ .hosts.jaeger_host }}:{{ .ports.jaeger_port }}/api/traces",
          "service_name":"krakend",
          "buffer_max_count": 1000
        }
    }
}
