{
  "version": 3,
  "name": "API Gateway",
  "port": {{ .ports.api_gateway_port }},
  {{ if and .tls.public_key .tls.private_key }}
  "tls": {
    "public_key": "{{ .tls.public_key }}",
    "private_key": "{{ .tls.private_key }}",
    "min_version": "TLS10",
    "max_version": "TLS13"
  },
  {{ end }}
  "client_tls": {
    "allow_insecure_connections": true
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  {{ include "plugin" }},
  "extra_config": {
    "router":{
        "logger_skip_paths":[
          "/__health"
        ],
        "use_h2c": true
    },
    "telemetry/logging": {
      "level": "{{ .observe.log_level }}",
      "prefix": "[KRAKEND]",
      "spans": true,
      "syslog": false,
      "stdout": true
    },
    {{ template "opencensus.tmpl" . }},
    {{ template "influxdb_metrics.tmpl" . }},
    {{ template "cors.tmpl" . }},
    "plugin/http-server": {
      "name": ["blob","sse-streaming", "multi-auth", "grpc-proxy-server", "registry"],
      "multi-auth":{
        "grpc_server": "{{ .plugins.mgmt_public_hostport }}"
      },
      "grpc-proxy-server": {},
      "registry": {
        "hostport": "{{ .plugins.registry_hostport }}",
        "mgmt_public_hostport": "{{ .plugins.mgmt_public_hostport }}",
        "mgmt_private_hostport": "{{ .plugins.mgmt_private_hostport }}",
        "model_public_hostport": "{{ .plugins.model_public_hostport }}",
        "model_private_hostport": "{{ .plugins.model_private_hostport }}",
        "artifact_private_hostport": "{{ .plugins.artifact_private_hostport }}"
      },
      "blob": {
        "minio_hostport": "{{ .plugins.minio_hostport }}",
        "mgmt_public_hostport": "{{ .plugins.mgmt_public_hostport }}",
        "mgmt_private_hostport": "{{ .plugins.mgmt_private_hostport }}",
        "artifact_private_hostport": "{{ .plugins.artifact_private_hostport }}"
      },
      "sse-streaming": {
         "backend_host": "{{ .plugins.pipeline_public_hostport }}"
      }
    }
  },
  "endpoints": [
    {{- template "mgmt.tmpl" . }},
    {{- template "mgmt_deprecate.tmpl" . }},
    {{- template "pipeline.tmpl" . }},
    {{- template "pipeline_deprecate.tmpl" . }},
    {{- template "model.tmpl" . }},
    {{- template "model_deprecate.tmpl" . }},
    {{- template "artifact.tmpl" . }},
    {{- template "artifact_deprecate.tmpl" . }},
    {{- template "debug.tmpl" . }}
  ]
}
