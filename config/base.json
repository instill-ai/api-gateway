{
  "version": 3,
  "name": "API Gateway",
  "port": {{ .ports.api_gateway_port }},
  {{ if and .tls.public_key .tls.private_key }}
  "tls": {
    "public_key": "{{ .tls.public_key }}",
    "private_key": "{{ .tls.private_key }}"
  },
  {{ end }}
  "client_tls": {
    "allow_insecure_connections": true
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  {{ include "plugin" }},
  "extra_config": {
    "router":{
        "logger_skip_paths":[
          "/__health"
        ]
    },
    "telemetry/logging": {
      "level": "{{ .log.level }}",
      "prefix": "[KRAKEND]",
      "spans": true,
      "syslog": false,
      "stdout": true
    },
    {{ template "opencensus.tmpl" . }},
    {{ template "cors.tmpl" . }},
  "plugin/http-server": {
      "name": ["grpc-proxy"],
      "grpc-proxy": {
        "pipeline": "{{ .backends.pipeline }}",
        "connector": "{{ .backends.connector }}",
        "model": "{{ .backends.model }}",
        "mgmt": "{{ .backends.mgmt }}"
      }
    }
  },
  "endpoints": [
    {{- template "debug.tmpl" . }},
    {{- template "pipeline.tmpl" . }},
    {{- template "connector.tmpl" . }},
    {{- template "model.tmpl" . }},
    {{- template "mgmt.tmpl" . }}
  ]
}
